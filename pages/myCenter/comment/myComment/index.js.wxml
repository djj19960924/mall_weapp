<!--pages/myCenter/comment/myComment/index.js.wxml-->
<view class="myComment"> 
  <view class="main">
    <view class="shop">
      <image src="../../../../images/nodata.png"></image>
      <view class="shopDetail">
        <view>MCM女包复古印花logo单肩包信封款女士链条宝中号</view>
        <view>
          <i-rate 
            bind:change="onChange2" 
            value="{{starIndex2}}">
            <text class="recommend">超级推荐</text>
          </i-rate>
        </view>
      </view>
    </view>

    <view class="content">
      <textarea placeholder="感觉怎么样？和大家分享一下吧~" placeholder-style="color:#B2B2B2"  />
    </view>
    <!-- 容器 -->
    <view class='ui_uploader_cell'>
      <!-- 根据已选择的图片临时路径数组展示图片-->
      <view class='ui_uploader_item' wx:for="{{uploaderList}}" wx:key="{{index}}">
        <!-- 删除-->
        <icon class='ui_uploader_item_icon' bindtap='clearImg' data-index="{{index}}" type="clear" size="20" color="red"/>
        <!-- 图片-->
        <image bindtap='showImg' data-index="{{index}}" src='{{item}}'></image>
      </view>
      <!-- 上传按钮+框 -->
      <view class='ui_uploader' bindtap='upload' wx:if="{{showUpload}}"></view>
    </view>
  </view>
  <view class="publish">
    发布
  </view>
</view>
