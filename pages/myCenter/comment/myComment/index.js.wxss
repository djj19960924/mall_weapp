  font-size: 28rpx;
}
.main {
  margin: 20rpx 30rpx;
}
.shop {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  border-bottom: 1rpx solid #F6F6F6;
  padding-bottom: 10rpx;
}
.shop image {
  width:140rpx;
  height: 140rpx;
