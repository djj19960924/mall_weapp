/* pages/center/invite/index.wxss */
page {
  background-color: #1F835D;
}
.invite {
  font-size: 28rpx;
}
.invite_main {
  margin: 30rpx 20rpx;
  height: 850rpx;
  background-color: #fff;
}
.invite_main_title {
  background-color: #D2E6DF;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.invite_main_title image {
  width: 44rpx;
  height: 44rpx;
  margin: 0 30rpx;
}
.invite_main_title text{
  color: #54A084;
  font-size: 32rpx;
}
.invite_main_content {
  text-align: center;
  font-size: 24rpx;
  color: #676767;
}
.invite_main_content .avatar {
  width: 135rpx;
  height: 135rpx;
  margin: 30rpx 0;
}
.invite_main_content .scan {
  width: 300rpx;
  height: 300rpx;
  margin: 30rpx 0;
}

.invite_wechat {
  margin: 0rpx 20rpx;
  height: 120rpx;
  background-color: #fff;
  line-height: 120rpx;
}
.invite_wechat image {
  width: 45rpx;
  height: 45rpx;
  margin: 0 30rpx;
  vertical-align: middle;
}