/* pages/tab4/index.wxss */
.tab4_main {
  background-color: #F8F8F8;
  color: #fff;
  font-size: 28rpx;
}
.top_bg {
  width: 750rpx;
  height: 350rpx;
  background-color: #000;
}
.myAvatar{
  margin-top: 55rpx;
  margin-left: 60rpx;
  margin-bottom: 30rpx;
  width: 650rpx;
  height: 150rpx;
  display: inline-flex;
  align-items: center;
}
.myAvatar_img{
  margin-right: 35rpx;
}

.myAvatar_img image{
  width: 150rpx;
  height: 150rpx;
}
.myAvatar_text .login{
  font-size: 46rpx;

}
.myAvatar_text .level{
  height: 40rpx;
  width: 120rpx;
  background-color: #DBC191;
  font-size: 20rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 40rpx;
}
.myAbout{
  margin-left: 60rpx;
  width: 650rpx;
  height: 80rpx;
  display: flex;
}
.myInter {
  text-align: center;
  flex: 1;
}
.myOrder {
  width: 715rpx;
  height: 250rpx;
  background-color: #fff;
  margin: 30rpx 17rpx;
  border-radius: 10rpx;
  color: #000;
}
.order_title {
  margin-left: 20rpx;
  padding-top: 15rpx;
  display: flex;
  justify-content: space-between;
}
.order_title .title{
  font-size: 30rpx;
  font-weight: bold;
}
.all_title{
  color: #B3B3B3;
}

.order_list {
  display: flex;
  margin-top: 40rpx;
}
.order_detail {
  text-align: center;
  width: 25%;
}
.order_detail image {
  width: 62rpx;
  height: 58rpx;
}

.goShop {
  width: 715rpx;
  height: 207rpx;
  margin: 0 17.5rpx;
  background-position: center;
  background-size: cover;
  display: inline-block;
}

.goShop_text {
  width: 540rpx;
  height: 86rpx;
  color: #000;
  margin: 90rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.goShop_title {
  font-size: 36rpx;
  font-weight: bold;
}
.goShop_note {
  font-size: 24rpx;
}
.goShop_btn {
  width: 150rpx;
  height: 50rpx;
  border-radius: 20rpx;
  line-height: 50rpx;
  background-color: #EADDD2;
  text-align: center;
  font-size: 24rpx;
}
.myService {
  width: 715rpx;
  height: 400rpx;
  background-color: #fff;
  margin: 30rpx 17rpx;
  border-radius: 10rpx;
  color: #000;
}
.myService_title {
  margin-left: 20rpx;
  padding-top: 15rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.myService_list {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.myService_detail {
  margin-bottom: 50rpx;
  text-align: center;
  width: 25%;
}
.myService_detail image {
  width: 62rpx;
  height: 58rpx;
}

