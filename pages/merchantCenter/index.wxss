/* pages/merchantCenter/index.wxss */
page {
  background-color: #EEEEF0;
}
.merchantCenter_main {
  font-size: 28rpx;
  margin: 20rpx;
}
.avatar_bg {
  width: 710rpx;
  height: 350rpx;
  background-position: center;
  background-size: cover;
  color: #FFF;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
  border-radius: 10rpx;
}
.avatar_bg image {
  width: 130rpx;
  height: 130rpx;
}
.apply_merchant {
  height: 100rpx;
  background-color: #FFF;
  border-radius: 10rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.apply_merchant image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}
.menu_nav {
  height: 550rpx;
  background-color: #FFF;
  border-radius: 10rpx;
}
.sing_list {
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 35rpx 0 35rpx;
  overflow: hidden;
  width: 640rpx;
  border-bottom: 1rpx solid #F6F6F6;
  padding-bottom: 20rpx;
}
.sing_list:last-child {
  border-bottom: 0rpx solid #F6F6F6;
}
.sing_list_left {
  width: 250rpx;
}

.sing_list_left image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 40rpx;
  vertical-align: middle;
}
.sing_list_left text {
  vertical-align:middle
}